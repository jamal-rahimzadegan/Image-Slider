export default function ImageItem(props) {
    let {name:img} = props?.item?.item || {}
    const [isLoading, setLoading] = useState(true)
    
    return (
        <TouchableOpacity disabled={isLoading} activeOpacity={1}>
            <ImageBackground style={[styles.SliderImageContainer,]}
                             onLoadEnd={() => setLoading(false)}
                             source={{uri: Uploads + img}}>
                    {!isLoading ? null : <Text>show your loading here</Text>}
            </ImageBackground>
        </TouchableOpacity>
    )
}
